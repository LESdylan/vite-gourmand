{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && cp -r src/i18n dist/src/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "node --max-old-space-size=384 --localstorage-file=/tmp/jest-localstorage node_modules/.bin/jest --runInBand",
    "test:watch": "node --max-old-space-size=384 --localstorage-file=/tmp/jest-localstorage node_modules/.bin/jest --watch --runInBand",
    "test:cov": "node --max-old-space-size=384 --localstorage-file=/tmp/jest-localstorage node_modules/.bin/jest --coverage --runInBand",
    "test:debug": "node --max-old-space-size=384 --localstorage-file=/tmp/jest-localstorage --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "node --max-old-space-size=2048 --localstorage-file=/tmp/jest-localstorage node_modules/.bin/jest --config ./src/test/e2e/jest-e2e.json --runInBand",
    "test:orders": "node --max-old-space-size=384 --localstorage-file=/tmp/jest-localstorage node_modules/.bin/jest --config ./src/test/e2e/jest-e2e.json --testPathPattern=order --runInBand",
    "test:flows": "node --max-old-space-size=384 --localstorage-file=/tmp/jest-localstorage node_modules/.bin/jest --config ./src/test/e2e/jest-e2e.json --testPathPattern=api-flows --runInBand",
    "test:all": "npm test -- --passWithNoTests && npm run test:e2e -- --passWithNoTests",
    "seed": "npx tsx prisma/seed-playground.ts",
    "seed:test": "npx tsx prisma/seed-test-data.ts",
    "seed:images": "npx tsx scripts/update-menu-images.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.13",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/websockets": "^11.1.13",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.4.0",
    "@types/compression": "^1.8.1",
    "@types/passport-google-oauth20": "^2.0.17",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "mongodb": "^7.1.0",
    "nestjs-i18n": "^10.6.0",
    "nodemailer": "^7.0.13",
    "openai": "^6.21.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.9.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "newman": "^6.2.2",
    "prettier": "^3.4.2",
    "prisma": "^7.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testPathIgnorePatterns": [
      "<rootDir>/test/cli_test/tests/",
      "<rootDir>/src/test/unit_tests/",
      "<rootDir>/src/test/fuzzy/",
      "<rootDir>/src/test/validators/"
    ],
    "testEnvironment": "node",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    }
  },
  "overrides": {
    "glob": "^13.0.0",
    "uuid": "$uuid"
  }
}
