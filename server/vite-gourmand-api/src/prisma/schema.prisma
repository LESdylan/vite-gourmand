// src/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String
  orders   Order[]
}

model Menu {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  price       Float
  minPeople   Int
  orders      Order[]
}

model Order {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
  menu      Menu   @relation(fields: [menuId], references: [id])
  menuId    Int
  quantity  Int
  total     Float
  status    String
}
