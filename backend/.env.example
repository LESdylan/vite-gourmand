# ============================================
# MONGODB CONFIGURATION
# ============================================

# Option 1: Local Docker MongoDB (default for development)
# MONGODB_URI="mongodb://root:example@localhost:27017/vite_gourmand?authSource=admin"

# Option 2: MongoDB Atlas (free tier - 512MB, recommended for production)
# Get connection string from: https://cloud.mongodb.com/
MONGODB_URI="mongodb+srv://[USERNAME]:[PASSWORD]@[CLUSTER].mongodb.net/vite_gourmand?retryWrites=true&w=majority&appName=vite-gourmand"

# MongoDB Atlas credentials (for reference)
MONGODB_ATLAS_USERNAME=""
MONGODB_ATLAS_PASSWORD=""

# Storage management (Atlas free tier is 512MB)
MONGODB_MAX_STORAGE_MB=450
MONGODB_CLEANUP_THRESHOLD_PERCENT=85

# ============================================
# JWT CONFIGURATION
# ============================================

JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
